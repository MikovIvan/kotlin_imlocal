<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="218dp"
    android:layout_gravity="center"
    app:layout_constraintCircleRadius="10dp">

    <TextView
        android:id="@+id/tv_enter_social_networks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small_8"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/title_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_login_vk"
        android:layout_width="@dimen/social_icons_40"
        android:layout_height="@dimen/social_icons_40"
        android:src="@drawable/ic_vk"
        app:layout_constraintBottom_toTopOf="@+id/tv_enter_social_networks_conditions"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_fb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_social_networks" />

    <ImageButton
        android:id="@+id/btn_login_fb"
        android:layout_width="@dimen/social_icons_40"
        android:layout_height="@dimen/social_icons_40"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:src="@drawable/ic_fb"
        app:layout_constraintBottom_toTopOf="@+id/tv_enter_social_networks_conditions"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_google"
        app:layout_constraintStart_toEndOf="@+id/btn_login_vk"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_social_networks" />

    <ImageButton
        android:id="@+id/btn_login_google"
        android:layout_width="@dimen/social_icons_40"
        android:layout_height="@dimen/social_icons_40"
        android:src="@drawable/ic_google"
        app:layout_constraintBottom_toTopOf="@+id/tv_enter_social_networks_conditions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_login_fb"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_social_networks" />

    <TextView
        android:id="@+id/tv_enter_social_networks_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small_8"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/title_conditions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>